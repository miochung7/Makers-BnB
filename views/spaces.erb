<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="/spaces.css">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <title>Makers BNB</title>
  </head>
  <body>

   <div class="top-container">
    <div class="logo-container">
      <img class="logo" src="/images/Logo.png">
    </div>
    <div class="button-container"> 
      <form action="/logout" method="post">
        <button class="btn btn-primary nav-btn"><a href="/login" style="color: #FFFFFF;">About</button></a>
        <button class="btn btn-primary nav-btn" id="logout">Logout</button>
      </form>
    </div>
  </div>

  <div class="container">
    <div class="heading-container"> 
      <h2>Browse a list of spaces</h2>
      <button type="button" class="btn btn-outline-primary"><a href="/spaces/new">List a Space</a></button>
    </div>

    <div>
      <ul>
        <% @spaces.each do |space| %>
        <br>
        <%= space %>
        <% end %>
      </ul>
    </div>

  </div>
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>

  </body>
</html>