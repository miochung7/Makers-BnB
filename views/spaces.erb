<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="/spaces.css">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <title>Makers BNB</title>
  </head>
  <body>

  <% flash.keys.each do |type| %>
    <div class="alert <%= type.to_s.gsub('_', '-') %> alert-dismissible fade show" role="alert">
      <%= flash[type]%>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <% end %>

  <nav class="navbar navbar-light" id="nav">
    <a class="navbar-brand" href="#">
      <img src="/images/logo1.png" width="100" height="100" alt="">
    </a>
    <div class="nav-container">
      <li class="nav-item">
        <a class="nav-link" href="#">Spaces</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Requests</a>
      </li>
      <%= session[:user_id] %>
      <% if session[:user_id] == nil %>
      <li class="nav-item">
        <a class="nav-link" href="/login">Login</a>
        <% else %>
        <li class="nav-item">
          <a class="nav-link" href="/logout">Logout</a>
          <% end %>
      </li>
    </div>
  </nav>

  <div class="container">
    <div class="heading-container col-4 mx-auto">
      <h2>Book a Space</h2>
      <p>Mauris interdum commodo massa et ultricies. Aliquam non ultrices magna. Vivamus lacinia lacus eu sem tempor dignissim.</p>
      <button type="button" class="btn btn-outline-primary" value="List a Space"><a href="/spaces/new">List a Space</a></button>
    </div>

    <div class="card card-container text-start d-grid gap-2" style="width: 40rem;">
      <% @spaces.each do |space| %>
        <h5 class="card-header"><%= space.name %></h5>
        <p class="card-text description"><%= space.description %></p>

        <div class="d-grid col-3 mx-auto">
          <a href="#" class="btn btn-outline-primary">Book here</a>
        </div>
        <br>

      <% end %>
    </div>

  </div>
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>

  </body>
</html>
