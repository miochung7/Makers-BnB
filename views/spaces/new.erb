  <div class="form-container">
    <h1>List a Space </h1>
    <form action="/new_space" method ="post" id="form">
      <div class="mb-3">
        <label for="formGroupExampleInput" class="form-label">Name</label>
        <input type="text" class="form-control" name="name">
      </div>
      <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">Description</label>
        <textarea class="form-control" name="description" rows="3"></textarea>
      </div>
       <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">Image URL</label>
         <input type="text" class="form-control" name="image" placeholder="URL">
      </div>
      <div class="mb-3">
        <label for="formGroupExampleInput" class="form-label">Price per night (£)</label>
        <input type="number" class="form-control" name="price_per_night" placeholder="£">
      </div>
      <div class="mb-3">
        <label for="formGroupExampleInput" class="form-label">Available from (DD/MM/YYYY)</label>
        <input type="date" class="form-control" name="available_from">
      </div>
      <div class="mb-3">
        <label for="formGroupExampleInput" class="form-label">Available to (DD/MM/YYYY)</label>
        <input type="date" class="form-control" name="available_to">
      </div>
      <input type="submit" class="btn btn-primary" value="Submit" />
    </form>
  </div>

